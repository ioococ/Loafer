<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ink.onei.dao.IScoreDao">
    <resultMap id="scoreMap" type="Score" autoMapping="true">
        <id column="id" property="id"/>
        <result column="score" property="score"/>
        <result column="user_id" property="userId"/>
    </resultMap>

    <insert id="add" parameterType="Score">
        insert into score
            (user_id, score)
        values (#{userId},
                #{score})
    </insert>

    <update id="updateScoreById" parameterType="Score">
        update score
        set user_id = #{userId},
            score   = #{score}
        where id = #{id}
    </update>

    <delete id="deleteScoreById" parameterType="Integer">
        delete
        from score
        where id = ${id}
    </delete>

    <select id="getScoreById" parameterType="Integer" resultMap="scoreMap">
        select *
        from score
        where id = #{id}
    </select>

    <select id="getAllScore" resultMap="scoreMap">
        select *
        from score
        order by #{userId}
    </select>
</mapper>