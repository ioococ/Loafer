<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="neko.fastboot.dao.UserMapper">
    <resultMap id="BaseResultMap" type="neko.fastboot.pojo.User">
        <id column="uid" jdbcType="INTEGER" property="uID"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="age" jdbcType="INTEGER" property="age"/>
        <result column="sex" jdbcType="INTEGER" property="sex"/>
        <result column="email" jdbcType="VARCHAR" property="email"/>
        <result column="date" jdbcType="DATE" property="date"/>
    </resultMap>
    <sql id="Base_Column_List">
        uid, name, password, age, sex, email, date
    </sql>
    <select id="queryByName" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from users
        where name = #{name,jdbcType=VARCHAR}
    </select>

    <!--  resultType 返回值类型 指定泛型类型  -->
<!--    <select id="queryAll" resultType="User">-->
<!--        select-->
<!--        <include refid="Base_Column_List"/>-->
<!--        from users-->
<!--    </select>-->

    <select id="queryAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from users
    </select>

    <select id="fuzzyQueryByName" parameterType="string" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from users where name like concat('%' #{name},'%')
    </select>
    <select id="queryByPrimaryKey" resultType="neko.fastboot.pojo.User"></select>
</mapper>